<% if logged_in? %>
  <div class="row">
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
      <%= link_to 'タスクの新規作成', new_task_path %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>